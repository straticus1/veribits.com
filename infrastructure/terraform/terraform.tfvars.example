# VeriBits Terraform Configuration
# Copy this file to terraform.tfvars and fill in your values

# AWS Configuration
aws_region = "us-east-1"

# JWT Secret (generate a random string)
jwt_secret = "your-secure-jwt-secret-here"

# Existing After Dark Systems Database Configuration
# Update these to match your existing RDS instance
existing_db_identifier = "afterdarksys-main-db"  # Your existing RDS instance identifier
existing_db_name       = "veribits"              # Database name to create/use in existing instance
existing_db_username   = "your_db_username"      # Username for existing database
existing_db_password   = "your_db_password"      # Password for existing database

# After Dark Systems ID Verification API
id_verify_api_key = "your-id-verify-api-key"

# Route53 Configuration
# Set to true if you need to create a new hosted zone for veribits.com
# Set to false if the zone already exists
create_route53_zone = false
